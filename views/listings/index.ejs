<% layout("/layouts/boilerplate") %>

<body>
  <br><br>

    <h2>All listings</h2>
    <!--<form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form>-->
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(listing of allListings) { %>

    <div class="card col listing-card" style="width: 20rem;">
        <a href="/listings/<%=listing._id%>"> <img src="<%= listing.image.url %>" class="card-img-top" 
        alt="listing image" style="height: 20rem;" ></a>

        <a href="/listings/<%=listing._id%>">
            <div class="card-img-overlay"></div>
        </a>
        <div class="card-body">
          <p class="card-text">
            <a href="/listings/<%=listing._id%>"><b><%=listing.title%></b></a>
            <br>
            <a href="/listings/<%=listing._id%>">&#8377;<%=listing.price.toLocaleString("en-IN")%></a>
          </p>
        </div>
      </div>
   
      <% } %>
    </div>
</body>


